{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "champion": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "traits": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false,
      "required": [ "name", "traits" ]
    },
    "trait": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "levels": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        }
      },
      "additionalProperties": false,
      "required": [ "name", "levels" ]
    }
  },
  "type": "object",
  "properties": {
    "champions": {
      "type": "array",
      "items": {
        "type": { "$ref": "#/$defs/champion" }
      }
    },
    "traits": {
      "type": "array",
      "items": {
        "type": { "$ref": "#/$defs/trait" }
      }
    }
  },
  "additionalProperties": false,
  "required": [ "champions", "traits" ]
}